{
    "frontend": {
        "pathPattern": [
            "frontend/**"
        ],
        "excludePathPattern": [
            "frontend/assets/help-docs/**"
        ],
        "waitForDeployCompletion": true,
        "workflowName": "deploy-frontend.yml"
    },
    "backend": {
        "pathPattern": [
            "backend/**"
        ],
        "waitForDeployCompletion": true,
        "workflowName": "deploy-backend.yml"
    },
    "azureDataFactory": {
        "pathPattern": [
            "adf-config/**"
        ],
        "waitForDeployCompletion": true,
        "workflowName": "deploy-adf.yml"
    }
}